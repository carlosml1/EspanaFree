<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item> <!-- Animación de entrada -->
        <item name="android:windowExitAnimation">@anim/popup_exit</item> <!-- Animación de salida -->
    </style>

    <style name="MyPopupMenuStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>